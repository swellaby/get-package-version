{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "es2015.promise",
      "es6"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "bin/**/*.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    ".coverage/",
    ".nyc_output/",
    ".testresults/",
    ".vscode/"
  ]
}
